@model IEnumerable<ReportingTool.Data.Models.Arrival>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Arrivals</h1>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Exact EmployeeId <input type="text" name="EmployeeIdFilter" value="@ViewData["EmployeeIdFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" /> 
        </p>
        <p>
            Exact Date:<input type="text" name="WhenFilter" value="@ViewData["WhenFilter"]" />
            <input type="submit" value="Search" class="btn btn-outline-danger" /> 
        </p>
        <a asp-action="Index">Back to Full List</a>

    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr class="bg-primary">
            <th scope="col">
                <a class= "btn btn-primary btn-lg active" role="button" asp-action="Index" asp-route-sortOrder="@ViewData["EmployeeIdParm"]">@Html.DisplayNameFor(model => model.EmployeeId)</a>
            </th>

            <th scope="col">
                <a class="btn btn-primary btn-lg active" role="button" asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.When)</a>
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>@item.EmployeeId</td>
            <td>@item.When</td>
        </tr>
    }
        </tbody>
    </table>
 
<div>
    <a asp-action="Index">Back to List</a>
</div>
